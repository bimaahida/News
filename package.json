    "@types/nconf": "^0.10.0",
    "@types/node": "^13.7.4",
    "@types/request-promise": "^4.1.45",
    "@types/swagger-ui-express": "^4.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^5.0.0-alpha.7",
    "mongoose": "^5.9.2",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "swagger-ui-express": "^4.1.3",
    "tsc-watch": "^4.1.0",
    "typescript": "^3.8.2"
  },
  "devDependencies": {
    "@types/jest": "^25.1.3",
